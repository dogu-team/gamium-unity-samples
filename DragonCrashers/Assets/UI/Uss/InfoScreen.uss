    color: rgb(236, 240, 241);
    text-shadow: 3px 3px 2px rgb(0, 0, 0);
}

.info-bottom-button-icon {
    -unity-background-scale-mode: scale-to-fit;
    top: 2%;
    width: 150px;
    height: 150px;
}
